<%= turbo_stream.update dom_id(@post, :comment_form) do %>
  <%= render partial: "comments/form", locals: { post: @post } %>
<% end %>

<%= turbo_stream.update dom_id(@post, :comments_list) do %>
  <%= render partial: "comments/list", locals: { post: @post } %>
<% end %>

<%= turbo_stream.update dom_id(@post, :comments_count) do %>
  <%= pluralize(@post.comments.count, "comment") %>
<% end %>